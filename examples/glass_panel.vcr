# Glass Material Demo
# Demonstrates frosted glass effect with chromatic aberration
# Inspired by drei's MeshTransmissionMaterial
version: 1

environment:
  resolution:
    width: 1280
    height: 720
  fps: 30
  duration: 5.0
  encoding:
    prores_profile: prores4444
    vendor: "apl0"

layers:
  - id: glass_panel
    z_index: 0
    wgpu_shader:
      shader_path: glass.wgsl
      width: 1280
      height: 720
      time_mode: seconds
