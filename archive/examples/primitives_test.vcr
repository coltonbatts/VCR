version: 1
environment:
  resolution: { width: 1920, height: 1080 }
  fps: 30
  duration: 3.0
seed: 42

layers:
  - id: bg
    procedural:
      kind: solid_color
      color: { r: 0.05, g: 0.05, b: 0.08, a: 1.0 }

  - id: rounded_rect
    z_index: 1
    position: [960, 300]
    anchor: center
    procedural:
      kind: rounded_rect
      center: { x: 0.5, y: 0.5 }
      size: { x: 0.3, y: 0.2 }
      corner_radius: 0.02
      color: { r: 0.2, g: 0.6, b: 0.9, a: 1.0 }

  - id: ring
    z_index: 2
    position: [400, 600]
    anchor: center
    procedural:
      kind: ring
      center: { x: 0.5, y: 0.5 }
      outer_radius: 0.15
      inner_radius: 0.1
      color: { r: 0.9, g: 0.3, b: 0.2, a: 1.0 }

  - id: line_prim
    z_index: 3
    procedural:
      kind: line
      start: { x: 0.1, y: 0.1 }
      end: { x: 0.9, y: 0.9 }
      thickness: 0.008
      color: { r: 1.0, g: 1.0, b: 0.2, a: 0.8 }

  - id: hexagon
    z_index: 4
    position: [1400, 600]
    anchor: center
    procedural:
      kind: polygon
      center: { x: 0.5, y: 0.5 }
      radius: 0.12
      sides: 6
      color: { r: 0.4, g: 0.9, b: 0.4, a: 1.0 }

  # Animatable color test â€” circle with pulsing red channel
  - id: animated_circle
    z_index: 5
    position: [960, 700]
    anchor: center
    procedural:
      kind: circle
      center: { x: 0.5, y: 0.5 }
      radius: "0.08 + sin(t * 0.1) * 0.03"
      color:
        r: "0.5 + sin(t * 0.2) * 0.5"
        g: 0.1
        b: 0.8
        a: 1.0
