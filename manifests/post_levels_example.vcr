version: 1
environment:
  resolution: { width: 640, height: 360 }
  fps: 24
  duration: { frames: 24 }

layers:
  - id: bg
    procedural:
      kind: gradient
      start_color: { r: 0.1, g: 0.1, b: 0.3, a: 1.0 }
      end_color:   { r: 0.8, g: 0.2, b: 0.1, a: 1.0 }
      direction: horizontal

post:
  - shader: levels
    gamma: 1.2
    lift: 0.05
    gain: 0.9
