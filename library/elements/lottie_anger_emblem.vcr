version: 1

environment:
  resolution: { width: 1920, height: 1080 }
  fps: 30
  duration: 5.0
  encoding:
    prores_profile: prores4444
    vendor: "apl0"

layers:
  - id: anger_emblem
    z_index: 10
    anchor: center
    pos_x: "960 + sin(t * 0.8) * 16"
    pos_y: "540 + sin(t * 1.0) * 16"
    scale: [1.55, 1.55]
    rotation_degrees: "sin(t * 0.7) * 4.0"
    opacity: "0.92 + 0.06 * sin(t * 1.6)"
    lottie:
      path: ./lottie/anger.json
